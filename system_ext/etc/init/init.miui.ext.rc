    setprop ro.ril.oem.sno ${ro.vendor.ril.oem.sno}
on property:ro.product.device=liuqin && property:ro.vendor.ril.oem.psno=*
    setprop ro.ril.oem.psno ${ro.vendor.ril.oem.psno}

