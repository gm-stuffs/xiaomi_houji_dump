    setprop persist.radio.imei ${persist.vendor.radio.imei}
    setprop persist.radio.imei1 ${persist.vendor.radio.imei}
on property:persist.vendor.radio.imei2=*
    setprop persist.radio.imei2 ${persist.vendor.radio.imei2}
